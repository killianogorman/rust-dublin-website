---
interface Props {
  title: string;
}
import Layout from "./Layout.astro";
const {title} = Astro.props
---
<Layout title={title}  description="" keywords="">
    <main class=" pt-36 px-32 pb-16 min-h-[55vh]">
        <slot/>
    </main>
</Layout>
<style>
    main {
        h1 {
            text-align: center;
        font-size: 2rem;
        font-weight: 700;
    }
    h2 {
        font-size: 1.75rem;
        font-weight: 700;
    }
    h3 {
        font-size: 1.5rem;
        font-weight: 600;
    }
    h4 {
        font-size: 1.25rem;
        font-weight: 500;
    }
    a {
        text-decoration: underline;
    }
    li{
        p {
            padding: 0.4rem;
        }
    }

    }
</style>